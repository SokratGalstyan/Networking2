<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/album_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Album ID:"
        android:textColor="@color/teal_700"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/album_id_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/album_id"
        app:layout_constraintRight_toLeftOf="@id/photo"
        app:layout_constraintTop_toTopOf="@id/album_id"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:"
        android:textColor="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@id/album_id_text"
        app:layout_constraintLeft_toLeftOf="@id/album_id"/>

    <TextView
        android:id="@+id/id_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/album_id_text"
        app:layout_constraintTop_toBottomOf="@id/album_id_text"
        app:layout_constraintRight_toRightOf="@id/album_id_text"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title:"
        android:textColor="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@id/id_text"
        app:layout_constraintLeft_toLeftOf="@id/album_id"
        />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/album_id_text"
        app:layout_constraintRight_toRightOf="@id/album_id_text"
        app:layout_constraintTop_toBottomOf="@id/id_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp"/>

    <ImageView
        android:id="@+id/photo"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:src="@drawable/image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/album_id"
        app:layout_constraintBottom_toBottomOf="@id/title"
        android:layout_marginRight="8dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>